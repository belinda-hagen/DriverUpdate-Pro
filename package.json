{
  "name": "driverupdate-pro",
  "version": "1.1.0",
  "description": "Professional driver update scanner for Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir && node scripts/set-icon.js && electron-builder --prepackaged dist/win-unpacked",
    "build:dir": "electron-builder --dir",
    "build:publish": "electron-builder --dir && node scripts/set-icon.js && electron-builder --prepackaged dist/win-unpacked --publish always",
    "generate-icon": "node scripts/generate-icon.js",
    "set-icon": "node scripts/set-icon.js"
  },
  "author": "DriverUpdate Pro",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^3.0.1",
    "rcedit": "^5.0.2",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.driverupdate.pro",
    "productName": "DriverUpdate Pro",
    "forceCodeSigning": false,
    "extraResources": [
      {
        "from": "app-update.yml",
        "to": "app-update.yml"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false,
      "executableName": "DriverUpdate Pro"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DriverUpdate Pro",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "belinda-hagen",
      "repo": "DriverUpdate-Pro"
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.1.7"
  }
}
